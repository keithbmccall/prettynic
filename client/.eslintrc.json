{
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "plugins": ["prettier", "jsx-a11y", "import","@typescript-eslint"],
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:react-hooks/recommended",
    "prettier"
  ],
  "parser": "@typescript-eslint/parser",
  "env": {
    "jest": true
  },
  "globals": {
    "global": true,
    "document": true,
    "setTimeout": true,
    "setInterval": true,
    "console": true,
    "window": true,
    "__DEV__": true
  },
  "rules": {
    "import/no-unresolved": "error",
    "@typescript-eslint/rule-name": "error"
  }
}
