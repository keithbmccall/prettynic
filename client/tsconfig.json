{
  "compileOnSave": false,
  "compilerOptions": {
    "jsx": "react-jsx",
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@providers": ["src/providers/index.ts"],
      "@router": ["src/router/index.tsx"],
      "@utils": ["src/utils/index.ts"],
      "@content/hooks": ["src/hooks/index.ts"],
      "@content/components/content-blocks": [
        "src/content/components/content-blocks/index.tsx"
      ],
      "@content/components/header": ["src/content/components/header/index.ts"],
      "@content/components/image": ["src/content/components/image/index.tsx"],
      "@content/components/loading": [
        "src/content/components/loading/index.tsx"
      ],
      "@content/components/layout": ["src/content/components/layout/index.tsx"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
